<%= form_tag({ :controller => :usgs, :action => :search },
		 method: "post", class: 'earthquake_sliders') do %>
	<%= label_tag('magnitude_range','Magnitude') %>	
	<%= text_field_tag('magnitude_range',"#{@magnitude_from_value};#{@magnitude_to_value}") %>
	<%= label_tag('felt_range','Felt') %>	
	<%= text_field_tag('felt_range',"#{@felt_from_value};#{@felt_to_value}") %>
	<%= label_tag('dimension_range','Dimension') %>	
	<%= text_field_tag('dimension_range',"#{@dimension_from_value};#{@dimension_to_value}") %>
	<%= label_tag('cdi_range','Cdi') %>	
	<%= text_field_tag('cdi_range') %>	
	<%= label_tag('tsunami','Tsunami') %>	
	<%= check_box_tag('tsunami') %>
	<br />
	<br />
	<%= link_to 'Reset',
        { :controller => :usgs, :action => :index },
        { :class => 'btn btn-danger btn-lg' } %>
    &nbsp;
	&nbsp;
	&nbsp;
	<%= submit_tag("Search",{:class => 'btn btn-success btn-lg'}) %>	
<% end %>
